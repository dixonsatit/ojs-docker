	</table>

	<table name="custom_section_orders">
		<field name="issue_id" type="I8">
			<NOTNULL />
		</field>
		<field name="section_id" type="I8">
			<NOTNULL />
		</field>
		<field name="seq" type="F">
			<NOTNULL/>
			<DEFAULT VALUE="0"/>
		</field>
